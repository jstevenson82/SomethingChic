<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
"http://www.w3.org/TR/html4/loose.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Manager  > Something Chic Party and Event Design > Cincinnati, Ohio > SCPEdesign.com</title>
        <link rel="icon" type="image/png" href="/images/logo.png" />
		<%= stylesheet_link_tag "master", 'widgEditor' %>
  		<%= javascript_include_tag "jquery", "application", "widgEditor" %>
  		<%= csrf_meta_tag %>
  		<style type="text/css">
  			li { clear: both; display: block !important; margin: 2px; padding: 10px 0; }
  		</style>
    </head>
    <body>
        <div id="cd_home_page">
	<div id="cd_header">
        <%= image_tag('/images/sc_header.jpg', :id => 'banner') %>  
		<%= render :partial => 'shared/top_nav' %>        
	</div>

    
    <div id="page_display_info">
        <div class="left pad5">    
            <div class="site_title left">somethingchic.com</div>
            <div class="page_title left">Manage</div>   
            <div class="clear"></div>
        </div>
        
	  	<div id="nav" class="right pad5">
	        <% if current_user %>
	        Welcome,<%= link_to current_user.firstname, edit_user_path(current_user.id)%> (<%= link_to "Logout", :logout%>) 	        
	        <% else %>
	        <%= link_to "Login", :login %>
	        <% end %>
	    </div>

   		<div class="clear"></div>
    </div><!-- page_display_info -->
    
    <div id="cd_home_page_body">

	
		<% unless flash[:notice].blank? %>
			<div id="flash" class="flash_html flash-sucess"><%= flash[:notice]%></div> 
		<% end %>
		<% unless flash[:error].blank? %>
			<div id="flash" class="flash_html flash-failure"><%= flash[:error]%></div> 
		<% end %>
	
	
	<% if current_user %>
		<!-- begin cd_home_page_body -->
		<div id="manage-menu" class="left" style="border-right:1px solid #ccc; height:650px; margin-right:20px;">
			<ul style="padding-right:20px;">
				<li><%= link_to "Manage Homepage Images", manager_index_home_path %></li>
				<li><%= link_to "Manage Blogs", manager_index_blog_path %></li>
				<li><%= link_to "Manage Gallery Images", manager_index_gallery_path %></li>
				<li><%= link_to "Manage Comments", "#" %></li>
				<li><%= link_to "Manage User", users_path%></li>
			</ul>
		</div>
		
		<div id="manage-content" class="left" style="width:65%;">
			<%= yield %>
		</div>
	<% else %>
		<h1>Please login to access the manage system</h1>
	     <p>Click here to <%= link_to "login", :login %>
	<% end %>
	
		<!-- end cd_home_page_body -->
        <div class="clear"></div>
	</div>
	
	<div class="clear"></div>
	<%= render :partial => 'shared/bottom_nav' %> 
     <div class="copyright">&copy; 2010 <a href="#">Something Chic</a> All rights reserved</div> 
</div><!-- cd_home_page -->

    </body>
</html>
