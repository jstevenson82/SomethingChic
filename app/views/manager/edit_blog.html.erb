<h1>Edit blog</h1>
 
<%= form_for @blog, :url => manager_update_blog_path( @blog ) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :size => "80x40", :style => "width:99%; height:150px;" %>
  </div>
  <div class="field">
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </div>
  <div class="field">
  	<select name="blog[category_id]">
  		<% @blog_categories.each do |category| %>
			<option value="<%= category.id %>"  <% if category.id == @blog.category_id %>selected<% end %>><%= category.title %></option>
		<% end %>
	</select>
  </div> 

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Delete', manager_destroy_blog_path(@blog) %> |
<%= link_to 'Back', manager_index_blog_path %>
